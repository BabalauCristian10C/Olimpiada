n = int(input("Introduceti un numar de trepte -"))
count = 0
inlt = -1
count_pills = 0
dif = []
while count < n:
    d = inlt
    inlt = int(input("Intoduceti inaltimea scarilor in ordine crescatoare -"))
    if inlt > d:
        count+=1
        if inlt - d > 1:
            count_pills += 1
            dif.append(inlt - d)
    else:
        print("Introduceti o treapta mai mare ca precendenta ", d)
        pass
print(count_pills, max(dif))
